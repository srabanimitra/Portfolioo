@model IEnumerable<Portfolioo.Models.Project>
@{
    ViewBag.Title = "Projects";
}
<h2>Projects</h2>
<div class="row">
    @foreach (var project in Model)
    {
        <div class="col-md-4">
            <div class="thumbnail">
                <img src="@project.ImagePath" alt="@project.Title" class="img-responsive" />
                <div class="caption">
                    <h3>@project.Title</h3>
                    <p>@project.Description</p>
                </div>
            </div>
        </div>
    }
</div>
