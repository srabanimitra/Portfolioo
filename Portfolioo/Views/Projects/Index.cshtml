@model IEnumerable<Portfolioo.Models.Project>
@{
    ViewBag.Title = "Projects";
}
<h2>Projects</h2>
<div class="row">
    @foreach (var project in Model)
    {
        <div class="col-md-4">
            <div class="project-card">
                <img src="@project.ImagePath" alt="@project.Title" class="project-img img-responsive" />
                <div class="caption">
                    <h3>@project.Title</h3>
                    <p>@project.Description</p>
                </div>
            </div>
        </div>
    }
</div>

<style>
    /* Pink box for each project */
    .project-card {
        background-color: #ffc0cb; /* Light pink */
        padding: 15px;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        text-align: center;
        margin-bottom: 20px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .project-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.15);
        }

    /* Image styling */
    .project-img {
        width: 100%;
        max-width: 300px;
        height: 200px;
        object-fit: cover;
        border-radius: 10px;
        margin-bottom: 15px;
    }

    /* Text inside box */
    .caption h3 {
        font-weight: bold;
        margin-bottom: 10px;
        color: #880e4f; /* Deep pink text */
    }

    .caption p {
        color: #4a4a4a;
    }
</style>
