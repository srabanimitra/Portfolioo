<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Portfolio</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <style>
        /* Gradient navbar background */
        .navbar-custom {
            background: linear-gradient(90deg, #ff7eb3, #6a82fb);
            border: none;
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav > li > a {
                color: white !important;
                font-weight: bold;
                font-size: 16px;
            }

                .navbar-custom .navbar-brand:hover,
                .navbar-custom .nav > li > a:hover {
                    color: #ffe082 !important;
                }

        footer {
            margin-top: 20px;
            text-align: center;
            color: #666;
        }
    </style>
</head>
<body style="margin:0;">
    <nav class="navbar navbar-inverse navbar-custom">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Index","Home")">My Portfolio</a>
            </div>
            <div class="navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Projects", "Index", "Projects")</li>
                    <li>@Html.ActionLink("Blog", "Index", "Blog")</li>
                    <li>@Html.ActionLink("Contact", "Index", "Contact")</li>
                    <li>@Html.ActionLink("Admin", "Admin", "Contact")</li>
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody() <!-- Hero will be full width if placed here -->

    <div class="container body-content">
        @RenderSection("MainContent", required: false)
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Portfolio Website</p>
        </footer>
    </div>
</body>
</html>
